##
##  Makefile -- Build procedure for sample colormap Apache module
##  Autogenerated via ``apxs -n colormap -g''.
##

builddir=.
top_srcdir=/usr/share/apache2
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all:
	sudo apxs -S CC="g++ -std=c++11 -lstdc++" -c -i mod_colormap.c && sudo service apache2 restart

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_colormap.o mod_colormap.lo mod_colormap.slo mod_colormap.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/colormap

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

