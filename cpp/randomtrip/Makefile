##
##  Makefile -- Build procedure for sample randomtrip Apache module
##  Autogenerated via ``apxs -n randomtrip -g''.
##

builddir=.
top_srcdir=/usr/share/apache2
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all:
	sudo apxs -S CC="g++ -std=c++11 -lstdc++" -c -i mod_randomtrip.c && sudo service apache2 restart

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_randomtrip.o mod_randomtrip.lo mod_randomtrip.slo mod_randomtrip.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/randomtrip

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

testcc: point_test visited_test range_test
	for i in $^; do ./$$i; done

point_test: point_test.cc point.h test.h
	g++ --std=c++11 -ggdb -o $@ $<

visited_test: visited_test.cc visited.h point.h test.h
	g++ --std=c++11 -ggdb -o $@ $<

range_test: range_test.cc range.h visited.h point.h test.h
	g++ --std=c++11 -ggdb -o $@ $<
